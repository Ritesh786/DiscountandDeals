<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    tools:context="com.companyproject.fujitsu.discountdeals.AddDeals">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal Title"
      android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/dealtitletxt"
        android:textColor="@android:color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_marginLeft="110dp"
        android:id="@+id/dealedit"
        android:layout_toRightOf="@+id/dealtitletxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="15dp"
       android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dealtitletxt"
        android:id="@+id/Cateitletxt"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/catedit"
        android:background="#ffffff"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/dealedit"
        android:layout_toRightOf="@+id/Cateitletxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Price"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
       android:layout_marginTop="20dp"
        android:layout_below="@+id/Cateitletxt"
        android:id="@+id/originaltxt"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:id="@+id/origedttxt"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="85dp"
        android:layout_below="@+id/catedit"
        android:layout_toRightOf="@+id/originaltxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discounted Price"
        android:textSize="15dp"
      android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/originaltxt"
        android:id="@+id/discountetxt"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:id="@+id/discountededit"
        android:layout_below="@+id/origedttxt"
        android:layout_toRightOf="@+id/discountetxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discounte"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/discountetxt"
        android:id="@+id/getdiscountetxt"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/discountededit"
        android:id="@+id/getdiscountetxtdig"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/getdiscountetxt"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textSize="15dp"
       android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/getdiscountetxt"
        android:id="@+id/startdate"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:id="@+id/startdateedit"
        android:layout_below="@+id/getdiscountetxtdig"
        android:layout_toRightOf="@+id/startdate"
       android:layout_marginRight="10dp"
        android:layout_marginLeft="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promo Period"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/startdate"
        android:id="@+id/promo"
        android:textColor="@android:color/black"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startdateedit"
        android:layout_toRightOf="@+id/promo"
        android:layout_marginTop="5dp"
        android:text="15 days"
        android:id="@+id/rbtn1"
        android:layout_marginLeft="70dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startdateedit"
        android:layout_toRightOf="@+id/rbtn1"
        android:layout_marginTop="5dp"
        android:text="30 days"
        android:layout_marginLeft="10dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Dtae"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/promo"
        android:id="@+id/endtxt"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:id="@+id/enddatetxt"
        android:layout_below="@+id/rbtn1"
        android:layout_toRightOf="@+id/endtxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Fill In Your Deals Detail Here"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/endtxt"
        android:id="@+id/pleasetxt"
        android:textColor="@android:color/black"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/pleasetxt"
    android:background="@drawable/roundedit"
    android:layout_margin="20dp"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n\n\n\n\n\n\n"/>


</LinearLayout>


</RelativeLayout>
</ScrollView>